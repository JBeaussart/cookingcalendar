---
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  user?: { email?: string; role?: string; user_role?: string; id?: string } | null;
}

const { title = "Planificateur de repas", user = null } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar user={user} />
    <slot />
  </body>
</html>

<script>
  // Session refresh optimisé - UNIQUEMENT quand l'utilisateur revient après une longue absence
  // Le refresh côté serveur est déjà géré par getServerSession
  (function() {
    let lastVisible = Date.now();
    
    // Refresh UNIQUEMENT quand l'utilisateur revient sur l'onglet après 30+ min d'absence
    document.addEventListener('visibilitychange', () => {
      if (!document.hidden && Date.now() - lastVisible > 30 * 60 * 1000) {
        // Recharger la page pour rafraîchir la session côté serveur
        window.location.reload();
      }
      lastVisible = Date.now();
    });
  })();
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
