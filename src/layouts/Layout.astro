---
import Navbar from "../components/Navbar.astro";

const { title = "Planificateur de repas" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<script>
  // Session refresh optimisé - seulement quand nécessaire
  (function() {
    let lastRefresh = 0;
    const MIN_INTERVAL = 15 * 60 * 1000; // 15 minutes minimum entre les refreshs
    
    async function refreshSession() {
      const now = Date.now();
      // Éviter les appels trop fréquents
      if (now - lastRefresh < MIN_INTERVAL) return;
      lastRefresh = now;
      
      try {
        const response = await fetch('/api/auth/refresh', {
          method: 'POST',
          credentials: 'include',
        });

        if (!response.ok && response.status === 401) {
          const path = window.location.pathname;
          if (!path.includes('/login') && !path.includes('/signup') && path !== '/') {
            window.location.href = '/login';
          }
        }
      } catch (e) {
        // Silently fail - network errors shouldn't block the user
      }
    }

    // Refresh au chargement uniquement sur les pages protégées
    const publicPages = ['/', '/login', '/signup', '/premium'];
    if (!publicPages.includes(window.location.pathname)) {
      refreshSession();
    }

    // Refresh quand l'utilisateur revient sur l'onglet (après 5+ min d'absence)
    let lastVisible = Date.now();
    document.addEventListener('visibilitychange', () => {
      if (!document.hidden && Date.now() - lastVisible > 5 * 60 * 1000) {
        refreshSession();
      }
      lastVisible = Date.now();
    });
  })();
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
