        });

        const data = await response.json();

        if (!response.ok) {
          errorDiv.textContent = data.error || "Une erreur est survenue lors de l'upgrade";
          errorDiv.classList.remove("hidden");
        } else {
          successDiv.textContent = data.message || "F√©licitations ! Vous √™tes maintenant Premium !";
