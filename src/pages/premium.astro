      const originalText = upgradeButton.textContent;
      upgradeButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Traitement...';

      try {
        const response = await fetch("/api/upgrade-premium", {
          method: "POST",
          headers: {
