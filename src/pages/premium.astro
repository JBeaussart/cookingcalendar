        }
      } catch (error) {
        errorDiv.textContent = "Une erreur est survenue. Veuillez r√©essayer.";
        errorDiv.classList.remove("hidden");
      } finally {
        upgradeButton.disabled = false;
        if (originalText) {
          upgradeButton.textContent = originalText;
        }
      }
    });
  }
</script>

