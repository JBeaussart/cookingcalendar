---
import "../styles/global.css";

const currentPath = Astro.url.pathname;

const links = [
  { href: "/", label: "Planning" },
  { href: "/recipes", label: "Recettes" },
  { href: "/shoppingList", label: "Liste de courses" },
  { href: "/reception", label: "Réception" },
];
---

<nav class="bg-white border-b border-gray-200 shadow-md">
  <div id="siteNav" class="max-w-screen-xl mx-auto px-4 py-3">
    <!-- Mobile header with hamburger -->
    <div class="flex items-center justify-between sm:hidden">
      <span class="text-base font-semibold text-gray-900">Menu</span>
      <button
        id="navToggle"
        type="button"
        class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white p-2 text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
        aria-label="Ouvrir le menu"
        aria-expanded="false"
        aria-controls="mobileMenu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-6 w-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile dropdown menu -->
    <ul id="mobileMenu" class="mt-3 hidden flex-col gap-2 sm:hidden">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class={`block rounded-md px-3 py-2 text-[15px] font-medium ${
                currentPath === link.href
                  ? "bg-blue-600 text-white"
                  : "text-gray-900 hover:bg-gray-100"
              }`}
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Desktop menu -->
    <ul class="hidden sm:flex sm:flex-wrap sm:justify-center gap-2 md:gap-6 mt-0 sm:mt-0">
      {
        links.map((link) => (
          <li class="min-w-0">
            <a
              href={link.href}
              class={`block py-1 px-2 text-sm md:text-base md:px-4 rounded-md font-medium text-center truncate
                      ${
                        currentPath === link.href
                          ? "bg-blue-600 text-white"
                          : "text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                      }`}
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const nav = document.getElementById('siteNav');
    const btn = document.getElementById('navToggle');
    const menu = document.getElementById('mobileMenu');
    if (!btn || !menu || !nav) return;

    function closeMenu() {
      if (!menu.classList.contains('hidden')) {
        menu.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
      }
    }

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const willOpen = menu.classList.contains('hidden');
      menu.classList.toggle('hidden');
      btn.setAttribute('aria-expanded', willOpen ? 'true' : 'false');
    });

    // Fermer en cliquant sur un lien
    menu.querySelectorAll('a').forEach((a) => {
      a.addEventListener('click', () => closeMenu());
    });

    // Fermer en cliquant à l'extérieur
    document.addEventListener('click', (e) => {
      if (!menu || menu.classList.contains('hidden')) return;
      if (!nav.contains(e.target)) closeMenu();
    });
  });
  </script>
